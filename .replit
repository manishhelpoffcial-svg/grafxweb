modules = ["python-3.11", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "glibcLocales", "libiconv", "libxcrypt", "rustc", "unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
