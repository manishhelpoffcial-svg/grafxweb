{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(home|aboutus|portfolio|contactus|login|admin|logout)",
      "dest": "app.py"
    },
    {
      "src": "/favicon.jpg",
      "dest": "/client/favicon.jpg"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
