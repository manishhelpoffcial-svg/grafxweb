{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/(home|aboutus|portfolio|contactus|login|admin|logout)",
      "destination": "/app.py"
    },
    {
      "source": "/favicon.jpg",
      "destination": "/client/favicon.jpg"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
